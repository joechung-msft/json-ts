{
  "devDependencies": {
    "@types/node": "^22.17.2",
    "npm-run-all": "^4.1.5"
  },
  "name": "json-ts",
  "private": true,
  "scripts": {
    "build": "npm-run-all build:*",
    "build:parser": "npm run build --workspace=packages/parser",
    "build:cli": "npm run build --workspace=packages/cli",
    "format": "npm-run-all format:*",
    "format:parser": "npm run format --workspace=packages/parser",
    "format:cli": "npm run format --workspace=packages/cli",
    "lint": "npm-run-all lint:*",
    "lint:parser": "npm run lint --workspace=packages/parser",
    "lint:cli": "npm run lint --workspace=packages/cli",
    "start": "npm start --workspace=packages/cli"
  },
  "version": "1.0.0",
  "workspaces": [
    "packages/*"
  ]
}
